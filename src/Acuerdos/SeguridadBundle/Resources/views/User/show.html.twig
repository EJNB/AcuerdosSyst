{% extends '::layout-admin.html.twig' %}

{% block content %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Usuario: {{ entity.name }}</h3>
        </div>
        <div class="panel-body">

            <table class="table table-striped table-hover " style="width: 70%">
                <tbody>
                <tr>
                    <th>Nombre</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Usuario</th>
                    <td>{{ entity.username }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>Activo</th>
                    <td>{{ entity.isActive }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{% for rol in entity.roles %}
                            {{ rol.role }}<br>
                        {% endfor %}
                    </td>
                </tr>
                </tbody>
            </table>

            <div class="show-action">
                <a id="add-button" class="btn btn-default" href="{{ path('users_edit',  { 'id': entity.id }) }}">
                    <span class="glyphicon glyphicon-pencil"></span>Editar
                </a>
                <a class="btn btn-default" href="{{ path('users') }}">Regresar al listado</a>
            </div>
        </div>
    </div>
{% endblock %}
