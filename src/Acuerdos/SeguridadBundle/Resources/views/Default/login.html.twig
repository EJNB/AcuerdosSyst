{% block content %}

<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" id="login-modal">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h2 class="text-center">AcuerdosSyst</h2>
                <p class="text-center">Sistema para la gesti&oacute;n de acuerdos</p>
                {% if error %}
                    <div class="alert alert-danger alert-dismissible" role="alert" id="alert-login">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Atenci&oacute;n!</strong> Error de credenciales.
                    </div>
                {% endif %}
            </div>
            <div class="modal-body" id="modal-body-login">
                <form class="form col-md-12 center-block" action="{{ path('acuerdos_seguridad_login_check') }}" method="post">
                    <h4 class="text-center">Iniciar sesi&oacute;n</h4>
                    <div class="form-group">
                        <input type="text" class="form-control input" name="_username" placeholder="Usuario" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control input" name="_password" placeholder="Contraseña">
                    </div>
                    <input type="hidden" name="_target_path" value="account" />
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Acceder</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="col-md-12">
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
