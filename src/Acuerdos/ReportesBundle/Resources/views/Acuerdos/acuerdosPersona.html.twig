{% extends '::layout-admin.html.twig' %}

{% block content %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-user"></span>{{ persona.descripcion|upper }}
            <div style="float: right"><a href="{{ path('seleccionar_procedencia') }}"><span class=" glyphicon glyphicon-arrow-left"></span>ATRAS</a></div>
        </div>
        <div class="panel-body">
            <div id="tabla-person-ac">
                <table id="table-ac-pers" class="table table-striped table-hover table-condensed table-bordered">
                    <thead style="text-align: center">
                        <tr style="background-color: #DBDBDB">
                            <th style="width: 10%">Rol</th>
                            <th style="width: 10%">Acuerdo</th>
                            <th style="width: 20%">Descripcion</th>
                            <th style="width: 10%">C. Indicado</th>
                            <th style="width: 20%">Seguimiento</th>
                            <th style="width: 20%">Observaciones</th>
                            <th style="width: 10%">Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for acuerdo in acuerdos %}
                        <tr style="text-align: center">
                            <td>{{ acuerdo.tipo }}</td>
                            <td>{{ acuerdo.idAcuerdo.idAcuerdo }}</td>
                            <td style="text-align: left">{{ acuerdo.idAcuerdo.descripcion }}</td>
                            <td>{{ acuerdo.idAcuerdo.fechaCumplimientoIndicada|date('Y-m-d') }}</td>
                            <td style="text-align: left">{{ acuerdo.idAcuerdo.accionesSeguimiento }}</td>
                            <td style="text-align: left">{{ acuerdo.idAcuerdo.observaciones }}</td>
                            <td>{{ acuerdo.idAcuerdo.estado }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


{% endblock %}