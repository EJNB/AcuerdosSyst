{% extends '::layout-admin.html.twig' %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Acuerdo: {{ entity.idProcedencia.prefijo }}-{{ entity.idAcuerdo }}</h3>
    </div>
    <div class="panel-body">

        <div class="show-action">
            <a id="add-button" class="btn btn-default" href="{{ path('acuerdo_edit',  { 'id': entity.id }) }}">
                <span class="glyphicon glyphicon-pencil"></span>Editar
            </a>
            <a class="btn btn-default" href="{{ path('acuerdo') }}" id="return-acuerdo-show">Regresar al listado</a>
        </div>

        <table class="table table-striped table-hover " style="width: 70%">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.idAcuerdo }}</td>
                </tr>
                <tr>
                    <th>Fecha de creación</th>
                    <td>{{ entity.fechaCreacion|date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th>Descripción</th>
                    <td>{{ entity.descripcion }}</td>
                </tr>
                <tr>
                    <th>Fecha de cumplimiento indicada</th>
                    <td>{{ entity.fechaCumplimientoIndicada|date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th>Fecha de cumplimiento real</th>
                    <td>{% if entity.fechaCumplimientoReal %}{{ entity.fechaCumplimientoReal|date('d-m-Y') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Acciones de seguimiento</th>
                    <td>{{ entity.accionesSeguimiento }}</td>
                </tr>
                <tr>
                    <th>Observaciones</th>
                    <td>{{ entity.observaciones }}</td>
                </tr>
                <tr>
                    <th>Estado</th>
                    <td>{{ entity.estado }}</td>
                </tr>
                <tr>
                    <th>Autor</th>
                    <td>
                        {% for persona in personas %}
                            {% if persona.tipo == "Autor" %}
                                {{ persona.idPersona.descripcion }}
                            {% endif %}
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Responsables</th>
                    <td>{% for persona in personas %}
                            {% if persona.tipo == "Responsable" %}
                                {{ persona.idPersona.descripcion }}<br>
                            {% endif %}
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Ejecutores</th>
                    <td>{% for persona in personas %}
                            {% if persona.tipo == "Ejecutor" %}
                                {{ persona.idPersona.descripcion }}<br>
                            {% endif %}
                        {% endfor %}
                    </td>
                </tr>

            </tbody>
        </table>

        <div class="show-action">
            <a id="add-button" class="btn btn-default" href="{{ path('acuerdo_edit',  { 'id': entity.id }) }}">
                <span class="glyphicon glyphicon-pencil"></span>Editar
            </a>
            <a class="btn btn-default" href="{{ path('acuerdo') }}">Regresar al listado</a>
        </div>
    </div>
</div>
{% endblock %}
